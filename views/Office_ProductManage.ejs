<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Manage</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"/>

   <!-- Custom CSS -->
   <link rel="stylesheet" href="/CSS/Homeoffice.css" />

   <!-- Google Font -->
   <link rel="preconnect" href="https://fonts.googleapis.com" />
   <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
   <link href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet"/>
</head>
<body>

    <!-- navbar -->
    <%- include ('partials/NavBack') %>

    <div>

        <!-- ADD Button -->
        <div class="add-product">
            <a href="/Office_addProductPage">
                <button class="custom-btn ADDButton d-block" id="AddProduct" > ADD Product </button>
            </a>
        </div>
        
        <div id="product-List">
            <div class="row">
            
            <% products.forEach(product => { %>

                <div class="col-4 product">
                    <div class="productBlock">
                        <img src=" <%= product.product_image %> " alt="" >
                        <br>
                        <h5><%= product.product_Name %></h5>
                        <h5><%= product.product_Price %> -</h5>
                        <p><%= product.product_Description %></p>
                        <br>
                        <h5>Category Name : <%= product.category_Name %></h5>
                    </div>

                    <!-- Delete Button -->
                    <div class="buttonProduct">
                        <button type="button" class="custom-btn" data-bs-toggle="modal" data-bs-target="#<%= product.product_ID %>Modal" id="deleteButton<%= product.product_ID %>">
                            DELETE
                        </button>
                        <div class="modal fade" tabindex="-1" id="<%= product.product_ID %>Modal" aria-labelledby="exampleModalLabelCollection" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabelCollection">Delete</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body" id="modalBodyContent">
                                        <p>Do you sure to delete <%= product.product_ID %> <%= product.product_Name %>?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-subtle" data-bs-dismiss="modal">Close</button>
                                        <!-- Add a form inside the modal -->
                                        <form id="deleteForm<%= product.product_ID %>" action="/deleteProduct" method="post">
                                            <input type="hidden" name="proID" value="<%= product.product_ID %>">
                                            <button type="submit" class="btn btn-primary" id="confirmModalButton<%= product.product_ID %>">
                                                Confirm
                                            </button>
                                        </form>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    
                        <!-- Edit Button -->
                        <a href="/edit/<%= product.product_ID %>">
                            <button type="button" class="custom-btn EditButton" data-bs-toggle="offcanvas" data-bs-target="#offcanvasTopCollection" aria-controls="offcanvasTopCollection">
                                EDIT
                            </button> 
                        </a>  
                    </div>
                    
                </div> 
                
            <% }); %>
            </div>

    </div>

    <!-- Javascript -->
    <script src="/Js/Backoffice.js"></script>

    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>