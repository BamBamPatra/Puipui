<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
 
    <!-- CSS -->
    <link rel="stylesheet" href="/CSS/Product.css">
 
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
</head>
 
<body style="background-color: rgba(188, 108, 37);">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-lg">
            <a class="navbar-brand" href="/">
                <img src="/Pic/PUIPUI.png" class="rounded-circle Logo_img" alt="">
            </a>
            <div class="navbar-nav ms-auto d-flex">
                <button class="btn" type="submit"><a href="mailto:puipui.storeproject@gmail.com" id="contactMe">PUIPUI</a></button>  

            </div>
            <div>
            <a class="nav-link text-center" href="/ShoppingBag">
                <img src="/Pic/shopping-bag.png" alt="" class="shopping-bag m-0">
            </a>
            </div>
        </div>
    </nav>
 
    <!-- Back Button -->
    <div class="container">
        <a href="/product/<%= product.category_Name %>" class="backButton">
            <span class="p-4 m-0 material-symbols-outlined">arrow_back_ios</span>
        </a>
    </div>
 
    <!-- Product -->
    <form id="productForm" action="/add-to-bag" method="post">
        <!-- Product -->
        <div id="product" class="container">
            <div class="row">

                <!-- Product Image -->
                <div class="col-lg-6 mb-4">
                    <img src="<%= product.product_image %>" alt="" class="ProductPic">
                </div>
            
                <!-- Product Info -->
                <div class="col-lg-6 Description">
                    <br>
                
                    <!-- Product Name -->
                    <h4><%= product.product_Name %></h4>
                    <!-- Product Price -->
                    <p class="m-3"><%= product.product_Price %> -</p>

                    <!-- Size -->
                    <div class="m-3 mt-5">
                        <p>SIZE</p>
                        <div class="checkboxSize">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="female" id="femaleCheckbox" name="genderCheckbox" />
                                <label class="form-check-label" for="femaleCheckbox">
                                    FEMALE
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="male" id="maleCheckbox" name="genderCheckbox" />
                                <label class="form-check-label" for="maleCheckbox">
                                    MALE
                                </label>
                            </div>
                        </div>
                    </div>

                <br>

                <!-- Alphabet Input -->
                <div class="m-3 mb-1">
                    <div class="FlexText">
                        <p>ALPHABET</p>
                        <input type="text" placeholder="A-Z" class="inputAlphabet" name="inputAlphabet">
                    </div>
                </div>

                <!-- Quantity button -->
                <div class="m-3 m-1">
                    <p>Number</p>
                    <div class="quantity-selector">
                        <button type="button" class="decrement">-</button>
                        <input type="text" name="quantity" style="width: 30px; text-align: center; background-color: transparent;" value="1">
                        <button type="button" class="increment">+</button>
                    </div>
                </div>

                <!-- Product Description -->
                <p class="mx-1 my-5"><%= product.product_Description %></p>

                <!-- Hidden Fields -->
                <input type="hidden" name="product_image" value="<%= product.product_image %>">
                <input type="hidden" name="product_ID" value="<%= product.product_ID %>">
                <input type="hidden" name="product_price" value="<%= product.product_Price %>">

                <!-- Button to buy -->
                <div class="m-3 ButtonToBuy">
                    <button type="submit" class="custom-btn AddToBag"> Add To Bag </button>

                </div>
            </div>
        </div>
        </div>
        </div>
    </form>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const decrementButton = document.querySelector('.decrement');
            const incrementButton = document.querySelector('.increment');
            const quantityInput = document.querySelector('input[name="quantity"]');
    
            // decrement
            decrementButton.addEventListener('click', function () {
                if (parseInt(quantityInput.value) > 1) {
                    quantityInput.value = parseInt(quantityInput.value) - 1;
                }
            });
    
            // increment
            incrementButton.addEventListener('click', function () {
                // Increase the quantity by 1
                quantityInput.value = parseInt(quantityInput.value) + 1;
            });
    
            // quantityInput
            quantityInput.addEventListener('change', function () {
                if (parseInt(quantityInput.value) < 1 || isNaN(parseInt(quantityInput.value))) {
                    quantityInput.value = 1;
                }
            });

            // checked box
            const femaleCheckbox = document.getElementById('femaleCheckbox');
            const maleCheckbox = document.getElementById('maleCheckbox');
    
            femaleCheckbox.addEventListener('change', function () {
                if (this.checked) {
                    maleCheckbox.checked = false;
                }
            });
    
            maleCheckbox.addEventListener('change', function () {
                if (this.checked) {
                    femaleCheckbox.checked = false;
                }
            });
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

