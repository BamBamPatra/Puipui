<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PUIPUI</title>
    
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/CSS/Home.css">

    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">
    <!-- Icon -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
</head>

<body>
    <!-- navbar -->
    <%- include ('partials/Nav') %>
    
    <!-- Carousel -->
    <!-- Large Screens (lg) -->
    <div id="carouselControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/Pic/Home/Banner_Puipui.jpg" class="d-block w-100" alt="PUIPUI">
            </div>
            <div class="carousel-item">
                <img src="/Pic/Home/Cardigan.jpg" class="d-block w-100" alt="Cardigan">
            </div>
            <div class="carousel-item">
                <img src="/Pic/Home/Sweater.jpg" class="d-block w-100" alt="Sweater">
            </div>
        </div>
    </div>

    <div class="row ShowProduct">
        <div class="col-4 BlockProductCardigan" id="cardiganDiv">
            <h2>CARDIGAN</h2>
        </div>
        <div class="col-4 BlockProductSweater" id="sweaterDiv">
            <h2>SWEATER</h2>
        </div>
        <div class="col-4 BlockProductSale" id="saleDiv">
            <h2>SALE</h2>
        </div>
    </div>

    <!-- footer -->
    <%- include ('partials/Footer') %>

    <!-- Javascript -->
    <script src="/Js/Webstore.js"></script>

    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            setInterval(function () {
                var carousel = document.getElementById('carouselControls');
                var carouselInstance = new bootstrap.Carousel(carousel);
                carouselInstance.next();
            }, 5000);
        });

        // จับเหตุการณ์การคลิกที่ปุ่มโลโก้เป็นปุ่มแทน
        document.querySelector('.navbar-toggler').addEventListener('click', function() {
            var navbarCollapse = document.querySelector('.navbar-collapse');
            // เปิดหรือปิดเมนู
            navbarCollapse.classList.toggle('show');
        });
    </script>
</body>
</html>
